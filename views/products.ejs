        <div class="col-12">
          <% urunler.forEach(urun => { %>
           
            <div class="div card mb-3">
              <div class="row">
                <div class="col-4">
                  <img src="/images/<%= urun.imageUrl %>" alt="" class="img-fluid" />
                </div>
                <div class="col-8">
                  <div class="card-body">
                    <h5 class="card-title"><%=urun.name%></h5>
                    <p class="card-text"><%=urun.price%></p>
                  </div>
                </div>ß
